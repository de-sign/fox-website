{
    "url": {
        "path": "doc.html"
    },
	"meta": {
		"title": "FOX Website - Documentation",
		"description": "Documentation for FOX Website - Simple Node.js project for develop your static website"
    },

    "template": {
        "name":  "documentation",
        "menu": {
            "mode": "uk-light",
            "position": "left",
            "background": {
                "type": "image",
                "attributes": {
                    "data-src": "assets/images/backgrounds/leaf-dark.jpg",
                    "class": "uk-background-cover"
                }
            }
        },
        "nav": {
            "class": "uk-nav-default",
            "scrollspy": "closest: li; scroll: true"
        },
        "navbar": {
            "sticky": "show-on-up: true; animation: uk-animation-slide-top;"
        }
    },
    
    "content": {
        "menu": {
            "icon": {
                "type": "uk-svg",
                "attributes": {
                    "data-src": "assets/images/icons/foxwebsite.svg",
                    "width": 125,
                    "height": 125,
                    "alt": "Website logo",
                    "class": "uk-text-emphasis"
                }
            },
            "title": "FOX Website",
            "buttons": [
                {
                    "type": "uk-button",
                    "tag": "a",
                    "content": "<span uk-icon=\"github\"></span> Github",
                    "attributes": {
                        "href": "https://github.com/de-sign/fox-website",
                        "class": "uk-button-default uk-margin-small-left uk-width-2-3 uk-width-auto@s",
                        "target": "_blank",
                        "rel": "noreferrer noopener"
                    }
                }
            ]
        },

        "navbar": {
            "icon": {
                "type": "uk-svg",
                "attributes": {
                    "data-src": "assets/images/icons/foxwebsite.svg",
                    "width": 40,
                    "height": 40,
                    "alt": "Website logo"
                }
            },

            "buttons": [
                {
                    "type": "uk-icon",
                    "tag": "a",
                    "attributes": {
                        "uk-icon": "icon: github; ratio: 1.5;",
                        "href": "https://github.com/de-sign/fox-website",
                        "target": "_blank",
                        "rel": "noreferrer noopener"
                    }
                }
            ]
        },

        "sections": [
            "intro.html",
            "nodejs.html",
            "gulp.html",
            "njk.html",
            "uikit.html",
            "js.html"
        ]
    }
}