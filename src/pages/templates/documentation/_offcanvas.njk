{% block offcanvas %}

    {% block offcanvas_placeholder %}
        <div class="fw-offcanvas-placeholder uk-hidden@m uk-padding-small">
            <ul class="uk-iconnav">
                <li>
                    <a href="#" uk-icon="icon: menu; ratio: 1.5;"></a>
                </li>
            </ul>
        </div>
    {% endblock %}

    {% block offcanvas_navbar %}
        <section class="fw-offcanvas-navbar uk-hidden@m uk-position-fixed uk-position-top uk-padding-small uk-position-z-index {{ FW.template.menu.mode }}"
            {% if FW.template.menu.background %}
                data-src="{{ FW.template.menu.background }}" uk-img
            {% endif %}
        >
            <ul class="uk-iconnav">
                <li>
                    <a href="#fw-offcanvas" uk-toggle uk-icon="icon: menu; ratio: 1.5;"></a>
                </li>
                <li class="uk-margin-small-left">
                    <a href="index.html">
                        <img class="fw-offcanvas-logo" data-src="{{ FW.content.menu.icon }}" width="25" height="25" alt="logo" uk-svg>
                    </a>
                </li>
                {% if FW.content.menu.buttons %}
                    {% for fw_button in FW.content.menu.buttons %}
                        <li class="uk-margin-small-left">
                            <a
                                {% if fw_button.attributes %}
                                    {% for a_name, a_value in fw_button.attributes %}
                                        {% if a_name != "class" %}
                                            {{ a_name }}="{{ a_value }}"
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}

                                uk-icon="{{ fw_button.icon }}"
                            >
                                {{ fw_button.short_label | safe }}
                            </a>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </section>
    {% endblock %}

    {% block offcanvas_content %}
        <section id="fw-offcanvas" uk-offcanvas="overlay: true; mode: push; {% if FW.template.menu.position == "right" %} flip: true; {% endif %}" >
            <div class="uk-offcanvas-bar uk-padding-remove {{ FW.template.menu.mode }}"
                {% if FW.template.menu.background %}
                    data-src="{{ FW.template.menu.background }}" uk-img
                {% endif %}
            >
                {% block offcanvas_nav %}
                    {% set scrollspy_offset = 60 %}
                    //=include _nav.njk
                {% endblock %}
            </div>
        </section>
    {% endblock %}

{% endblock %}